<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.submission.dicodingandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:networkSecurityConfig="@xml/network_security_config"
            android:allowBackup="true"
            android:usesCleartextTraffic="true"
            android:hardwareAccelerated="false"
            android:icon="@drawable/logo"
            android:label="@string/pizza_hut"
            android:largeHeap="true"
            android:roundIcon="@drawable/logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.submission.dicodingandroid.MenuPizza">
        </activity>
        <activity
                android:name="com.submission.dicodingandroid.MainActivity"
                android:label="@string/pizza_hut">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.submission.dicodingandroid.DetailMenu"
                android:label="@string/detail_menu"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name="com.submission.dicodingandroid.Profile"
                android:label="@string/profil"
                android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>